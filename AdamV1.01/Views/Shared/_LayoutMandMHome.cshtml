<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Adam Rusch</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/buttonRespond")

</head>
<body id="BSO_background" class="img-responsive">
    <div class="navbar navbar-inverse navbar-fixed-bottom" id="homepage-navbar-overrides">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="center-align-nav-content">
                <ul class="nav navbar-nav" id="larger-content-center-helper">
                    @* SET navbar route, view name and layout name (in that order)  *@
                    <li><a href="@Url.Action("About","AlternateView")" id="homepage-a-overrides" onmousedown="return mouseClicked('aboutButton')" onmouseup="return mouseUnclicked('aboutButton')"><img name="aboutButton" src="../../images/BeveledButton100px.png" id="homepage-button-overrides" class="thumbnail img-responsive" alt="About"></a></li>
                    <li><a href="@Url.Action("Bands","AlternateView")" id="homepage-a-overrides" onmousedown="return mouseClicked('bandsButton')" onmouseup="return mouseUnclicked('bandsButton')"><img name="bandsButton" src="../../images/BeveledButton100px.png" id="homepage-button-overrides" class="thumbnail img-responsive" alt="Bands"></a></li>
                    <li><a href="@Url.Action("Contact","AlternateView")" id="homepage-a-overrides" onmousedown="return mouseClicked('contactButton')" onmouseup="return mouseUnclicked('contactButton')"><img name="contactButton" src="../../images/BeveledButton100px.png" id="homepage-button-overrides" class="thumbnail img-responsive" alt="Contact"></a></li>
                </ul>
                <ul class="nav navbar-nav" id="smaller-content-helper">
                    @* SET string for navbar, set controller view method and controller name (in that order)  *@
                    <li>@Html.ActionLink("About", "About", "AlternateView")</li>
                    <li>@Html.ActionLink("Bands", "Bands", "AlternateView")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "AlternateView")</li>
                </ul>
                @* default call to view loginPartial *@
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer>
                <p>&copy; @DateTime.Now.Year - Adam Rusch's ASP.NET Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)    

</body>
</html>
