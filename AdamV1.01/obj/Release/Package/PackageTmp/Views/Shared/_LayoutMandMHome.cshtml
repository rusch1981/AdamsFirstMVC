<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Adam Rusch</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body id="BSO_background" class="img-responsive">
    <div class="navbar navbar-inverse navbar-fixed-bottom" id="homepage-navbar-overrides">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="center-align-nav-content">
                <ul class="nav navbar-nav" id="center-helper">
                    @* SET navbar route, view name and layout name (in that order)  *@
                    <li><a href="@Url.Action("About","AlternateView")" id="homepage-a-overrides" onmousedown="return mouseClicked()" onmouseup="return mouseUnclicked"><img name="aboutButton" src="../../images/BeveledButton100px.png" id="homepage-button-overrides" class="thumbnail img-responsive" alt="About Button"></a></li>
                    <li><a href="@Url.Action("Bands","AlternateView")" id="homepage-a-overrides"><img name="bandsButton" src="../../images/BeveledButton100px.png" id="homepage-button-overrides" class="thumbnail img-responsive" alt="Bands Button"></a></li>
                    <li><a href="@Url.Action("Contact","AlternateView")" id="homepage-a-overrides"><img name="contactButton" src="../../images/BeveledButton100px.png" id="homepage-button-overrides" class="thumbnail img-responsive" alt="Contact Button"></a></li>
                    </ul>
                @* default call to view loginPartial *@
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer>
                <p>&copy; @DateTime.Now.Year - Adam Rusch's ASP.NET Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">       
        function mouseClicked() {            
            document.images["aboutButton"].src= "../../images/FlatterButton100px.png";
            return true;            
        }
        function mouseUnclicked() {
            document.images["aboutButton"].src= "../../images/BeveledButton100px.png";
            return true;
        }
    </script>
</body>
</html>
