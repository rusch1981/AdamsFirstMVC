<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Adam Rusch</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body id="BSO_background" class="img-responsive"> 
    <div class="navbar navbar-inverse navbar-fixed-top" id="navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("M&M Productions", "Index", "AlternateView", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @* SET string for navbar, set controller view method for view and controller name (in that order)  *@
                    <li>@Html.ActionLink("Feature", "Feature", "AlternateView")</li>
                    <li>@Html.ActionLink("About", "About", "AlternateView")</li>
                    <li>@Html.ActionLink("Bands", "Bands", "AlternateView")</li>
                    <li>@Html.ActionLink("Event Calendar", "Event_Calendar", "AlternateView")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "AlternateView")</li>
                </ul>
                @* default call to view loginPartial *@
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer>
            <p>&copy; @DateTime.Now.Year - Adam Rusch's ASP.NET Application</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
